{
    "compilerOptions": {
        "allowJs": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": true,
        "inlineSources": true,
        "moduleResolution": "node",
        "target": "es6",
        "preserveConstEnums": true,
        "declaration": true,
        "declarationDir": "./dist/ts",
        "module": "es6",
        "lib": [
            "es2015",
            "dom"
        ],
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/*"
    ]
}